int tempPin = A0;    // LM35 output pin connected to A0
float tempC;

void setup() {
  Serial.begin(9600);
}

void loop() {
  int reading = analogRead(tempPin);
  tempC = (reading * 5.0 * 100.0) / 1024;  // Convert to Celsius
  Serial.print("Temperature: ");
  Serial.print(tempC);
  Serial.println(" Â°C");
  delay(1000);
}
